<UserControl x:Class="CodeAnnotationTool.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center"><Run Text="Notion Toolbar"/><LineBreak/><Run/></TextBlock>
            <TextBox TextWrapping="Wrap" Width="240" Height="229" x:Name="TextInput"/>
            <Button Content="Ok" Click="OkButton_OnClick" Width="240" Height="24" x:Name="OkButton" VerticalContentAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
